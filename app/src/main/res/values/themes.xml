<resources>

    <style name="Theme.ECom" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryStatusBarColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressHorizontalTheme" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:indeterminate">true</item>
        <item name="android:mirrorForRtl">true</item>
    </style>

    <style name="ExpandTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CollapseTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
</resources>